<% if @suggested_posts %>
  <h3>Suggested for you</h3>
  <% @suggested_posts.each do |post| %>
    <div style="border: 1px solid #ccc">
      <%= render post %>
    </div>
  <% end %>
<% else %>
  <h3>Your Following's Posts</h3>
  <% @following_posts.each do |post| %>
    <div style="border: 1px solid #ccc">
      <%= render post %>
    </div>
  <% end %>
<% end %>
